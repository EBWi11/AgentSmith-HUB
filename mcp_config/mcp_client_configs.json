        "servers": {
          "agentsmith-hub": {
                       "name": "AgentSmith-HUB",
           "serverUrl": "http://localhost:8080/mcp",
            "headers": {
              "token": "YOUR_TOKEN_HERE",
              "Content-Type": "application/json"
            },
            "timeout": 30000
          }
        }
      }
    }
  },
  "cursor_ide": {
