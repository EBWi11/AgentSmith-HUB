  "anthropic_workbench": {
    "description": "Configuration for Anthropic Workbench",
    "workbench.json": {
      "mcp_servers": [
        {
          "id": "agentsmith-hub",
          "name": "AgentSmith-HUB",
          "endpoint": "http://localhost:8080/mcp",
          "protocol": "http",
          "auth": {
            "type": "token",
            "header": "token",
            "value": "YOUR_TOKEN_HERE"
          },
          "features": {
            "resources": true,
            "tools": true,
            "prompts": true
          }
        }
      ]
    }
  },
  "custom_python_client": {
    "description": "Configuration for custom Python MCP client",
    "config.py": {
      "MCP_SERVER_CONFIG": {
        "name": "agentsmith-hub",
        "url": "http://localhost:8080/mcp",
        "headers": {
          "Content-Type": "application/json",
          "token": "YOUR_TOKEN_HERE"
        },
        "timeout": 30,
        "retry_attempts": 3,
        "protocol_version": "2025-03-26"
      }
    },
    "example_usage": {
      "python_code": "import requests\n\nconfig = MCP_SERVER_CONFIG\nresponse = requests.post(\n    config['url'],\n    json={\n        'jsonrpc': '2.0',\n        'id': 1,\n        'method': 'initialize',\n        'params': {\n            'protocolVersion': config['protocol_version'],\n            'capabilities': {},\n            'clientInfo': {\n                'name': 'python-client',\n                'version': '0.1.2'\n            }\n        }\n    },\n    headers=config['headers'],\n    timeout=config['timeout']\n)"
    }
  },
  "generic_json_rpc": {
    "description": "Generic JSON-RPC client configuration",
    "client_config.json": {
      "server": {
        "name": "AgentSmith-HUB",
        "endpoint": "http://localhost:8080/mcp",
        "protocol": "json-rpc-2.0",
        "transport": "http",
        "authentication": {
          "type": "header_token",
          "header_name": "token",
          "token_value": "YOUR_TOKEN_HERE"
        },
        "connection": {
          "timeout_ms": 30000,
          "retry_attempts": 3,
          "retry_delay_ms": 1000,
          "keep_alive": true
        },
        "capabilities": {
          "resources": true,
          "tools": true,
          "prompts": true,
          "notifications": false,
          "progress": false
        }
      }
    }
  },
  "deployment_examples": {
    "docker_compose": {
      "version": "3.8",
      "services": {
        "mcp-client": {
          "image": "node:18-alpine",
          "environment": [
            "AGENTSMITH_TOKEN=your-token-here",
            "MCP_SERVER_URL=http://agentsmith-hub:8080/mcp"
          ],
          "volumes": [
            "./mcp-client:/app"
          ],
          "working_dir": "/app",
          "command": "node mcp-client.js",
          "depends_on": [
            "agentsmith-hub"
          ]
        }
      }
    },
    "kubernetes_configmap": {
      "apiVersion": "v1",
      "kind": "ConfigMap",
      "metadata": {
        "name": "mcp-client-config"
      },
      "data": {
        "config.json": "{\n  \"mcpServers\": {\n    \"agentsmith-hub\": {\n      \"command\": \"node\",\n      \"args\": [\n        \"/app/mcp-http-bridge.js\",\n        \"--server-url\", \"http://agentsmith-hub:8080/mcp\",\n        \"--auth-header\", \"token\",\n        \"--auth-token\", \"${AGENTSMITH_TOKEN}\"\n      ]\n    }\n  }\n}"
      }
    }
  },
  "testing_configurations": {
    "curl_test": {
      "description": "Test configuration using curl",
      "commands": {
        "health_check": "curl -X GET 'http://localhost:8080/mcp/health'",
        "initialize": "curl -X POST 'http://localhost:8080/mcp' -H 'Content-Type: application/json' -H 'token: YOUR_TOKEN' -d '{\"jsonrpc\":\"2.0\",\"id\":1,\"method\":\"initialize\",\"params\":{\"protocolVersion\":\"2025-03-26\",\"capabilities\":{},\"clientInfo\":{\"name\":\"curl-test\",\"version\":\"0.1.2\"}}}'",
        "list_tools": "curl -X POST 'http://localhost:8080/mcp' -H 'Content-Type: application/json' -H 'token: YOUR_TOKEN' -d '{\"jsonrpc\":\"2.0\",\"id\":2,\"method\":\"tools/list\"}'",
        "list_resources": "curl -X POST 'http://localhost:8080/mcp' -H 'Content-Type: application/json' -H 'token: YOUR_TOKEN' -d '{\"jsonrpc\":\"2.0\",\"id\":3,\"method\":\"resources/list\"}'",
        "get_projects": "curl -X POST 'http://localhost:8080/mcp' -H 'Content-Type: application/json' -H 'token: YOUR_TOKEN' -d '{\"jsonrpc\":\"2.0\",\"id\":4,\"method\":\"tools/call\",\"params\":{\"name\":\"get_projects\"}}'"
      }
    },
    "postman_collection": {
      "info": {
        "name": "AgentSmith-HUB MCP API",
        "description": "MCP API testing collection"
      },
      "variable": [
        {
          "key": "base_url",
          "value": "http://localhost:8080"
        },
        {
          "key": "auth_token",
          "value": "YOUR_TOKEN_HERE"
        }
      ],
      "item": [
        {
          "name": "Initialize MCP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "token",
                "value": "{{auth_token}}"
              }
            ],
            "url": "{{base_url}}/mcp",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"id\": 1,\n  \"method\": \"initialize\",\n  \"params\": {\n    \"protocolVersion\": \"2025-03-26\",\n    \"capabilities\": {},\n    \"clientInfo\": {\n      \"name\": \"postman-test\",\n      \"version\": \"0.1.2\"\n    }\n  }\n}"
            }
          }
        }
      ]
    }
  },
  "setup_instructions": {
    "quick_start": [
      "1. Choose your MCP client configuration from the examples above",
      "2. Replace 'YOUR_TOKEN_HERE' with your actual AgentSmith-HUB authentication token",
      "3. Update the server URL if AgentSmith-HUB is not running on localhost:8080",
      "4. Copy the configuration to your client's configuration file",
      "5. Restart your MCP client to apply the changes",
      "6. Test the connection using the health check endpoint"
    ],
    "token_generation": {
      "note": "Contact your AgentSmith-HUB administrator to obtain an authentication token",
      "test_command": "curl -H 'token: YOUR_TOKEN' http://localhost:8080/token-check"
    },
    "troubleshooting": {
      "connection_issues": [
        "Verify AgentSmith-HUB is running: curl http://localhost:8080/ping",
        "Check if you're connecting to the cluster leader: curl http://localhost:8080/cluster-status",
        "Validate your token: curl -H 'token: YOUR_TOKEN' http://localhost:8080/token-check"
      ],
      "common_errors": {
        "401_unauthorized": "Invalid or missing authentication token",
        "403_forbidden": "MCP services only available on cluster leader node",
        "connection_refused": "AgentSmith-HUB server is not running or not accessible",
        "timeout": "Increase timeout settings in your client configuration"
      }
    }
  }
} 