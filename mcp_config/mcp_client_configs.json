{
  "vscode_mcp_extension": {
    "description": "Configuration for VSCode MCP Extension",
    "settings.json": {
      "mcp.servers": {
        "agentsmith-hub": {
          "name": "AgentSmith-HUB",
          "description": "Security Data Pipe Platform (SDPP) & Security Rules Engine",
          "transport": {
            "type": "http",
            "baseUrl": "http://localhost:8080",
            "endpoint": "/mcp"
          },
          "authentication": {
            "type": "header",
            "header": "token",
            "value": "YOUR_TOKEN_HERE"
          },
          "timeout": 30000,
          "retryAttempts": 3,
          "capabilities": {
            "resources": true,
            "tools": true,
            "prompts": true
          }
        }
      },
      "mcp.logLevel": "info",
      "mcp.enableAutoReconnect": true,
      "mcp.connectionTimeout": 10000
    }
  },
  "claude_desktop": {
    "description": "Configuration for Claude Desktop Application",
    "config.json": {
      "mcpServers": {
        "agentsmith-hub": {
          "command": "node",
          "args": [
            "/path/to/mcp-http-bridge.js",
            "--server-url", "http://localhost:8080/mcp",
            "--auth-header", "token",
            "--auth-token", "${AGENTSMITH_TOKEN}"
          ],
          "env": {
            "AGENTSMITH_TOKEN": "your-auth-token-here",
            "NODE_ENV": "production",
            "DEBUG": "mcp:*"
          }
        }
      }
    },
    "environment_setup": {
      "bash": "export AGENTSMITH_TOKEN='your-auth-token-here'",
      "windows": "set AGENTSMITH_TOKEN=your-auth-token-here",
      "powershell": "$env:AGENTSMITH_TOKEN='your-auth-token-here'"
    }
  },
  "cline_vscode": {
    "description": "Configuration for Cline VSCode Extension",
    "cline_mcp_settings.json": {
      "mcpServers": {
        "agentsmith-hub": {
          "command": "npx",
          "args": [
            "@modelcontextprotocol/server-http",
            "--url", "http://localhost:8080/mcp",
            "--headers", "token=YOUR_TOKEN_HERE"
          ]
        }
      }
    }
  },
  "continue_vscode": {
    "description": "Configuration for Continue VSCode Extension",
    "config.json": {
