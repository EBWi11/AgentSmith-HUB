{
  "mcpServers": {
    "agentsmith-hub": {
      "name": "AgentSmith-HUB",
      "description": "Data Processing Pipeline Management System",
      "version": "0.1.2",
      "transport": {
        "type": "http",
        "baseUrl": "http://localhost:8080",
        "endpoint": "/mcp",
        "headers": {
          "token": "YOUR_AUTH_TOKEN_HERE"
        }
      },
      "capabilities": {
        "resources": true,
        "tools": true,
        "prompts": true
      },
      "timeout": 30000
    }
  },
  "installation": {
    "quick_setup": {
      "description": "Easy installation guide for popular MCP clients",
      "endpoints": {
        "install_config": "/mcp/install",
        "setup_scripts": "/mcp/setup?client={vscode|claude|curl|custom}"
      }
    },
    "vscode": {
      "description": "Configuration for VSCode MCP extension",
      "steps": [
        "1. Install MCP extension in VSCode",
        "2. Get your authentication token from AgentSmith-HUB admin",
        "3. Visit http://localhost:8080/mcp/setup?client=vscode for setup script",
        "4. Add configuration to VSCode settings.json",
        "5. Restart VSCode"
      ],
      "settings_template": {
        "mcp.servers": {
          "agentsmith-hub": {
            "name": "AgentSmith-HUB",
            "description": "Data Processing Pipeline Management",
            "transport": {
              "type": "http",
              "baseUrl": "http://localhost:8080",
              "endpoint": "/mcp"
            },
            "authentication": {
              "type": "header",
              "header": "token",
              "value": "YOUR_TOKEN_HERE"
            }
          }
        }
      }
    },
    "claude_desktop": {
      "description": "Configuration for Claude Desktop",
      "steps": [
        "1. Set environment variable AGENTSMITH_TOKEN",
        "2. Add server configuration to Claude config.json",
        "3. Restart Claude Desktop"
      ],
      "config_template": {
        "mcpServers": {
          "agentsmith-hub": {
            "command": "node",
            "args": [
              "/path/to/mcp-http-client.js",
              "--server",
              "http://localhost:8080/mcp",
              "--token",
              "${AGENTSMITH_TOKEN}"
            ],
            "env": {
              "AGENTSMITH_TOKEN": "your-token-here"
            }
          }
        }
      }
    },
    "custom_client": {
      "description": "Configuration for custom MCP implementations",
      "protocol": "JSON-RPC 2.0 over HTTP",
      "endpoint": "http://localhost:8080/mcp",
      "authentication": {
        "method": "header",
        "header_name": "token",
        "note": "Include 'token: YOUR_AUTH_TOKEN' in request headers"
      },
      "required_headers": {
        "Content-Type": "application/json",
        "token": "YOUR_AUTH_TOKEN"
      },
      "example_request": {
        "method": "POST",
        "url": "http://localhost:8080/mcp",
        "headers": {
          "Content-Type": "application/json",
          "token": "YOUR_TOKEN"
        },
        "body": {
          "jsonrpc": "2.0",
          "id": 1,
          "method": "initialize",
          "params": {
            "protocolVersion": "2025-03-26",
            "capabilities": {},
            "clientInfo": {
              "name": "your-client",
              "version": "0.1.2"
            }
          }
        }
      }
    }
  },
  "documentation": {
    "installation_guide": "Visit /mcp/install for interactive installation guide",
    "quick_setup": "Visit /mcp/setup for client-specific setup scripts",
    "health_check": "Visit /mcp/health to verify server status",
    "api_reference": "All AgentSmith-HUB API endpoints are available as MCP tools",
    "examples": "Visit /mcp/setup?client=curl for testing examples"
  },
  "features": {
    "resources": {
      "description": "Access to all component configurations",
      "types": ["projects", "inputs", "outputs", "rulesets", "plugins"],
      "example": "hub://project/my-project"
    },
    "tools": {
      "description": "Complete API access via MCP tools",
      "count": "60+ tools available",
      "categories": [
        "Project Management",
        "Component CRUD Operations", 
        "Testing & Validation",
        "Cluster Management",
        "Monitoring & Statistics"
      ]
    },
    "prompts": {
      "description": "Intelligent assistance prompts",
      "available": [
        "analyze_project",
        "debug_component", 
        "optimize_performance",
        "create_project_guide",
        "create_ruleset_guide",
        "security_audit",
        "cluster_health_check",
        "migration_guide",
        "capacity_planning"
      ]
    }
  },
  "security": {
    "authentication": {
      "method": "token_based",
      "header": "token",
      "note": "Obtain token from AgentSmith-HUB administrator"
    },
    "authorization": {
      "leader_only": "MCP services only available on cluster leader node",
      "full_access": "MCP clients have full API access with valid token"
    }
  },
  "troubleshooting": {
    "common_issues": {
      "connection_refused": "Ensure AgentSmith-HUB is running and accessible",
      "unauthorized": "Check your authentication token is correct",
      "forbidden": "Ensure you're connecting to the cluster leader node",
      "timeout": "Increase timeout settings in your MCP client"
    },
    "health_endpoints": {
      "mcp_health": "/mcp/health",
      "server_ping": "/ping",
      "cluster_status": "/cluster-status"
    }
  }
} 